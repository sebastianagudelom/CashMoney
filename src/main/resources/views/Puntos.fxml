<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<AnchorPane prefHeight="480.0" prefWidth="600.0"
            styleClass="fondo-menu"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.controllers.PuntosController">

   <stylesheets>
      <String fx:value="/styles/styles.css"/>
   </stylesheets>

   <children>
      <!-- Tarjeta principal -->
      <AnchorPane layoutX="50.0" layoutY="30.0" prefWidth="500.0" prefHeight="420.0" styleClass="tarjeta">
         <children>
            <Label layoutX="190.0" layoutY="25.0" text="Puntos acumulados" styleClass="saludo-label"/>

            <Label fx:id="lblNombre" layoutX="50.0" layoutY="90.0" text="Nombre del Cliente" styleClass="label" />

            <Label layoutX="50.0" layoutY="130.0" text="Puntos:" styleClass="label" />
            <Label fx:id="lblPuntos" layoutX="150.0" layoutY="130.0" styleClass="label" />

            <Label layoutX="50.0" layoutY="170.0" text="Rango:" styleClass="label" />
            <Label fx:id="lblRango" layoutX="150.0" layoutY="170.0" styleClass="label" />

            <Button fx:id="btnVolver" layoutX="25.0" layoutY="300.0" text="Volver" onAction="#volverAlMenu" styleClass="button"/>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
