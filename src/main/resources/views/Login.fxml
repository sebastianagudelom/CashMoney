<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="480.0" prefWidth="400.0" styleClass="fondo-menu" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.controllers.LoginController">

   <stylesheets>
      <String fx:value="/styles/styles.css" />
   </stylesheets>

   <children>
      <VBox fx:id="mainVBox" alignment="CENTER" layoutX="50.0" layoutY="40.0" prefWidth="500.0" spacing="15.0">

         <children>

            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="330.0" styleClass="titulo-logo" text="\$CashMoney$" textAlignment="CENTER" />

            <Label styleClass="saludo-label" text="Iniciar sesión" />

            <Label styleClass="label" text="Usuario" />
            <TextField fx:id="txtUsuario" maxWidth="250" promptText="Usuario" styleClass="text-field" />

            <Label styleClass="label" text="Clave" />
            <PasswordField fx:id="txtClave" maxWidth="250" promptText="Clave" styleClass="password-field" />

            <Button fx:id="btnIniciarSesion" onAction="#iniciarSesion" styleClass="button" text="Iniciar sesión" />

            <Hyperlink fx:id="linkRegistro" onAction="#irARegistro" styleClass="link-registro" text="¿No tienes cuenta? Regístrate" />

            <Label fx:id="lblMensaje" maxWidth="350" styleClass="label" textAlignment="CENTER" wrapText="true" />
         </children>

      </VBox>
   </children>
</AnchorPane>
