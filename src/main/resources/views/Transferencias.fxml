<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<AnchorPane prefHeight="480.0" prefWidth="600.0"
            styleClass="fondo-menu"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.controllers.TransferenciasController">

   <stylesheets>
      <String fx:value="/styles/styles.css"/>
   </stylesheets>

   <children>

      <!-- Barra superior con información del cliente -->
      <HBox spacing="10" alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="600.0" styleClass="barra-superior">
         <children>
            <Label fx:id="lblCliente" text="Cliente actual:" styleClass="barra-label" />
            <Label fx:id="lblSaldoSuperior" text="Saldo:" styleClass="barra-label" />
         </children>
      </HBox>

      <AnchorPane layoutX="50.0" layoutY="60.0" prefWidth="500.0" prefHeight="390.0" styleClass="tarjeta">
         <children>

            <!-- Título -->
            <Label layoutX="170.0" layoutY="20.0" text="Transferencias" styleClass="saludo-label"/>

            <!-- Destinatario -->
            <Label layoutX="30.0" layoutY="70.0" text="Destinatario" styleClass="label"/>
            <ComboBox fx:id="cmbUsuarios" layoutX="30.0" layoutY="95.0" promptText="Seleccione" prefWidth="140.0" styleClass="combo-box"/>

            <!-- Monto -->
            <Label layoutX="190.0" layoutY="70.0" text="Monto a transferir" styleClass="label"/>
            <TextField fx:id="txtMonto" layoutX="190.0" layoutY="95.0" promptText="Ingrese monto" styleClass="text-field" prefWidth="130.0"/>

            <!-- Categoría -->
            <Label layoutX="340.0" layoutY="70.0" text="Categoría" styleClass="label"/>
            <ComboBox fx:id="cmbCategoria" layoutX="340.0" layoutY="95.0" prefWidth="130.0" promptText="Seleccione categoría" styleClass="combo-box"/>

            <!-- Botón transferir -->
            <Button fx:id="btnTransferir" layoutX="200.0" layoutY="140.0" text="Transferir" onAction="#realizarTransferencia" styleClass="button"/>

            <!-- Mensaje de estado -->
            <Label fx:id="lblMensaje" layoutX="30.0" layoutY="190.0" prefWidth="440.0" textAlignment="CENTER" styleClass="label"/>

            <!-- Inscribir cuentas -->
            <Label layoutX="30.0" layoutY="230.0" text="Inscribir cuentas nuevas" styleClass="label"/>
            <TextField fx:id="txtNumeroCuenta" layoutX="30.0" layoutY="255.0" promptText="Número de cuenta" styleClass="text-field" prefWidth="200.0"/>
            <Button fx:id="btnInscribir" layoutX="240.0" layoutY="255.0" text="Inscribir" onAction="#inscribirCuenta" styleClass="button"/>
            <Label fx:id="lblInscripcionMensaje" layoutX="30.0" layoutY="290.0" prefWidth="440.0" styleClass="label"/>

            <!-- Volver -->
            <Button fx:id="btnVolver" layoutX="30.0" layoutY="340.0" text="Volver" onAction="#volverMenu" styleClass="button"/>

         </children>
      </AnchorPane>
   </children>
</AnchorPane>
