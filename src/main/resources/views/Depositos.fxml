<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<AnchorPane styleClass="fondo-menu" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.controllers.DepositosController">

   <stylesheets>
      <String fx:value="/styles/styles.css"/>
   </stylesheets>

   <children>
      <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="50.0" prefWidth="500.0">
         <children>
            <Label text="Depósito de dinero" styleClass="saludo-label"/>
            <Label text="Ingrese el monto a depositar:" styleClass="label"/>
            <TextField fx:id="txtMonto" promptText="Ingresar monto" styleClass="text-field"/>
            <Button fx:id="btnDepositar" text="Depositar" onAction="#realizarDeposito" styleClass="button"/>
            <Label fx:id="lblMensaje" styleClass="label"/>
            <Button fx:id="btnVolver" text="Volver al menú" onAction="#volverMenu" styleClass="button"/>
         </children>
      </VBox>
   </children>
</AnchorPane>
