<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<AnchorPane styleClass="fondo-menu" prefHeight="480.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.controllers.TransaccionesMenuController">

    <stylesheets>
        <String fx:value="/styles/styles.css"/>
    </stylesheets>

    <children>
        <!-- Barra superior con información del cliente -->
        <HBox spacing="10" alignment="CENTER_LEFT" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0">
            <Label fx:id="lblClienteInfo" text="Cliente actual: Nombre    Saldo: $0.00" styleClass="barra-superior"/>
        </HBox>

        <VBox spacing="15" alignment="CENTER" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
              AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="30.0">

            <Label text="Menú de Transacciones" styleClass="titulo-transacciones"/>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnDepositos" text="Depósitos" onAction="#irADepositos"
                        prefWidth="150.0" prefHeight="50.0" styleClass="boton-transaccion"/>
                <Button fx:id="btnRetiros" text="Retiros" onAction="#irARetiros"
                        prefWidth="150.0" prefHeight="50.0" styleClass="boton-transaccion"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnTransferencias" text="Transferencias" onAction="#irATransferencias"
                        prefWidth="310.0" prefHeight="50.0" styleClass="boton-transaccion"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnTransaccionesProgramadas" text="Transacciones Programadas"
                        onAction="#irATransaccionesProgramadas" prefWidth="310.0" prefHeight="50.0"
                        styleClass="boton-transaccion"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnHistorial" text="Historial de Transacciones"
                        onAction="#irAConsultaHistorial" prefWidth="310.0" prefHeight="50.0"
                        styleClass="boton-transaccion"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnInscribirCuentas" text="Inscribir Cuenta"
                        onAction="#irAInscripcionCuentas" prefWidth="310.0" prefHeight="50.0"
                        styleClass="boton-transaccion"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnVolverMenu" text="Volver al Menú Principal" onAction="#irAMenu"
                        prefWidth="310.0" prefHeight="40.0" styleClass="boton-volver"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
